        using System;
       namespace MyFirstRepo
         {
          class Program
            {
        static void Main(string[] args)
              {
            double firstValue, secondValue;
            string action;
            Console.WriteLine("Enter amount 1");
            firstValue = double.Parse(Console.ReadLine());

            Console.WriteLine("Enter amount 2");
            secondValue = double.Parse(Console.ReadLine());

            Console.WriteLine("Choose operation: '+' '-' '*' '/'");
            action = Console.ReadLine();

            if (action == "+")
            {
                Console.WriteLine(firstValue + secondValue);  
            }
            else if (action == "-")
            {
                Console.WriteLine(firstValue - secondValue);
            }
            else if (action == "*")
            {
                Console.WriteLine(firstValue * secondValue);
            }
            else if (action == "/")
            {
                Console.WriteLine(firstValue / secondValue);
            }
            if (secondValue == 0)
              Console.WriteLine(0);
                    else
                        Console.WriteLine(firstValue / secondValue);
            else
            {
                Console.WriteLine("Doing something wrong");
            }
            
            //КАЛЬКУЛЯТОР (ТІЛЬКИ СУМА) ЧЕРЕЗ ФУНКЦІЮ

using System;

namespace First
{
    class MainClass
    {
        static int Sum(int a, int b)
        {
            int result = a + b;
            return result;
        }

        public static void Main(string[] args)
        {
            int a, b, c;
            {
                a = int.Parse(Console.ReadLine());
                b = int.Parse(Console.ReadLine());
            }

            c = Sum(a, b);
            {
                Console.WriteLine("Result is " + c);
            }

        }
    }
}
  // ПОПИТКА НОРМАЛЬНОГО КАЛЬКУЛЯТОРА
  using System;

namespace First
{
    class MainClass
    {
        static int action(double firstValue, secondValue)
        {
            int action = firstValue + secondValue;
            return action;
        }
        public static void Main(string[] args)
        {
            double firstValue, secondValue;

            {
                firstValue = double.Parse(Console.ReadLine());
                secondValue = double.Parse(Console.ReadLine());
                Console.WriteLine("Choose operation: '+' '-' '*' '/'");
                action = Console.ReadLine();
            }

            action = (double firstValue, secondValue);
            {
                Console.WriteLine("Result is " + action);
            }
        }
    }
}
