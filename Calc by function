//КАЛЬКУЛЯТОР (ТІЛЬКИ СУМА) ЧЕРЕЗ ФУНКЦІЮ

using System;

namespace First
{
    class MainClass
    {
        static int Sum(int a, int b)
        {
            int result = a + b;
            return result;
        }

        public static void Main(string[] args)
        {
            int a, b, c;
            {
                a = int.Parse(Console.ReadLine());
                b = int.Parse(Console.ReadLine());
            }

            c = Sum(a, b);
            {
                Console.WriteLine("Result is " + c);
            }

        }
    }
}
  // ПОПИТКА НОРМАЛЬНОГО КАЛЬКУЛЯТОРА
  using System;

namespace First
{
    class MainClass
    {
        static int action(double firstValue, secondValue)
        {
            int action = firstValue + secondValue;
            return action;
        }
        public static void Main(string[] args)
        {
            double firstValue, secondValue;

            {
                firstValue = double.Parse(Console.ReadLine());
                secondValue = double.Parse(Console.ReadLine());
                Console.WriteLine("Choose operation: '+' '-' '*' '/'");
                action = Console.ReadLine();
            }

            action = (double firstValue, secondValue);
            {
                Console.WriteLine("Result is " + action);
            }
        }
